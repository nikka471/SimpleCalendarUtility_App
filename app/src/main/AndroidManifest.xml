<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- INTERNET permission for API fetch -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- Android 13+ -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleCalendarUtilityApp">

        <!-- LoginActivity will launch first -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SignupActivity -->
        <activity
            android:name=".auth.SignupActivity"
            android:exported="false" />

        <!-- HomeActivity (after login) -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false" />

        <!-- Add Event Activity -->
        <activity
            android:name=".ui.add_event.AddEventActivity"
            android:exported="false" />

        <!-- Event Detail Activity -->
        <activity
            android:name=".ui.detail_event.EventDetailActivity"
            android:exported="false" />

        <!-- MainActivity (if used for anything else) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Firebase Messaging Service -->
        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
